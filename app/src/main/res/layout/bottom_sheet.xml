<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bottom_sheets_menu"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/downLoadFromNet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:background="@drawable/main_selector"
        android:drawableStart="@drawable/downloadsvg"
        android:drawablePadding="@dimen/_30sdp"
        android:fontFamily="@font/actor"
        android:gravity="start|center_vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:text="@string/download"
        android:textAllCaps="false"
        android:textColor="#4B4B4B"
        android:textSize="@dimen/_12sdp" />

    <Button
        android:id="@+id/setAsBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:background="@drawable/main_selector"
        android:drawableStart="@drawable/ic_baseline_wallpaper_24"
        android:drawablePadding="@dimen/_30sdp"
        android:elevation="@dimen/_10sdp"
        android:fontFamily="@font/actor"
        android:gravity="start|center_vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:text="@string/set_as_background"
        android:textAllCaps="false"
        android:textColor="#4B4B4B"
        android:textSize="@dimen/_12ssp" />

    <Button
        android:id="@+id/setAsLockscreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/main_selector"
        android:drawableStart="@drawable/ic_baseline_lock_open_24"
        android:drawablePadding="@dimen/_30sdp"
        android:elevation="@dimen/_10sdp"
        android:fontFamily="@font/actor"
        android:gravity="start|center_vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:text="@string/set_as_lockscreen"
        android:textAllCaps="false"
        android:textColor="#4B4B4B"
        android:textSize="@dimen/_12ssp" />

</LinearLayout>